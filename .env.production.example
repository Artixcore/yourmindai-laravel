APP_NAME=YourMindAI
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourmindaid.com
APP_TIMEZONE=UTC

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration (Docker MySQL container)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=yourmindai
DB_USERNAME=yourmindai
DB_PASSWORD=yourmindai_password
DB_ROOT_PASSWORD=yourmindai_root_password

# Cache and Session Configuration (Redis)
CACHE_DRIVER=redis
CACHE_PREFIX=
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Redis Configuration (Docker Redis container)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
JWT_SECRET=
JWT_TTL=604800
JWT_REFRESH_TTL=20160

# CORS Configuration
CORS_ORIGIN=https://yourmindaid.com

# OpenAI Integration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_ORGANIZATION=

# Webhook Configuration (for auto-deployment)
WEBHOOK_SECRET=

# Mail Configuration (optional - configure if needed)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yourmindaid.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (optional - for S3 file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcasting (optional)
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# Additional Security
SANCTUM_STATEFUL_DOMAINS=yourmindaid.com
SESSION_DOMAIN=yourmindaid.com
